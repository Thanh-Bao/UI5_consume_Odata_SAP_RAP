<mvc:View controllerName="baobaostore.com.controller.ZC_PHONE_PRICE"
    xmlns:l="sap.ui.layout"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">

    <Page>

        <Button text="Add new Iphone"
            press=".onAddNewPhonePressBtn">
        </Button>

        <IconTabBar
            id="iconTabBar"
            select="onQuickFilter"
            expandable="false"
            applyContentPadding="false">
            <items>
                <IconTabFilter
                    key="all_product"
                    showAll="true"
                    count="Total ({list_IPhone_model_key_name>/all_product})"
                    text="Phone" />
                <IconTabFilter
                    icon="sap-icon://activate"
                    iconColor="Positive"
                    key="new_product"
                    count="{list_IPhone_model_key_name>/new_product}"
                    text="new product" />
                <IconTabFilter
                    icon="sap-icon://add-equipment"
                    iconColor="Critical"
                    key="used_product"
                    count="{list_IPhone_model_key_name>/used_product}"
                    text="used product" />
                <IconTabFilter
                    icon="sap-icon://product"
                    key="in_stock"
                    count="{list_IPhone_model_key_name>/in_stock}"
                    text="In stock" />
            </items>
            <content>
                <Table
                    id="Iphone_table"
                    updateFinished=".onUpdateFinished"
                    inset="false"
                    items="{/ZC_PHONE_PRICE}">
                    <columns>
                        <Column>
                            <Text text="ID" />
                        </Column>
                        <Column
                            minScreenWidth="Tablet"
                            width="10em"
                            demandPopin="true">
                            <Text text="Specification ID" />
                        </Column>
                        <Column
                            minScreenWidth="Desktop"
                            demandPopin="true"
                            width="5em"
                            hAlign="Center">
                            <Text text="Color" />
                        </Column>
                        <Column
                            minScreenWidth="Desktop"
                            demandPopin="true"
                            width="8em"
                            hAlign="Center">
                            <Text text="Storage (GB)" />
                        </Column>
                        <Column
                            hAlign="Center">
                            <Text text="Guarantee (month)" />
                        </Column>
                        <Column
                            hAlign="Center">
                            <Text text="Depreciation (%)" />
                        </Column>
                        <Column
                            hAlign="End">
                            <Text text="Fake price (VND)" />
                        </Column>
                        <Column
                            hAlign="End">
                            <Text text="Real price (VND)" />
                        </Column>
                        <Column
                            width="8em"
                            hAlign="End">
                            <Text text="Status" />
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem vAlign="Middle">
                            <cells>
                                <ObjectIdentifier
                                    text="{id}" />
                                <Text
                                    text="{specification_id}" />
                                <Text
                                    text="{color}" />
                                <Text
                                    text="{storage}" />
                                <Text
                                    text="{guarantee}" />
                                <Text
                                    text="{= ${depreciation} > 0 ? ${depreciation}  : 'New' }" />
                                <Text
                                    text="{
								path: 'fake_price',
								formatter : '.formatter.price'
							}" />
                                <Text
                                    text="{
								path: 'real_price',
								formatter : '.formatter.price'
							}" />
                                <Text
                                    text="{
								path: 'status',
								formatter : '.formatter.product_status'
							}" />
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </content>
        </IconTabBar>


        <!-- Start FORM SUBMIT -->

        <l:VerticalLayout class="sapUiContentPadding" width="100%">
            <Label text="ID" labelFor="id" />
            <Input
                id="id"
                placeholder="Ex: Iphone-11-Pro-blue-128GB"
                value="{new_phone>/id}"
                class="sapUiSmallMarginBottom" />

            <Label text="Specification ID" labelFor="specification_id" />
            <Input
                id="specification_id"
                type="Number"
                placeholder="Ex: 545"
                value="{new_phone>/specification_id}"
                class="sapUiSmallMarginBottom" />

            <Label text="Color" labelFor="color" />
            <Input
                id="color"
                value="{new_phone>/color}"
                placeholder="Ex: BLACK, YELOW, BLUE, ..."
                class="sapUiSmallMarginBottom" />

            <Label text="Storage (GB)" labelFor="storage" />
            <Input
                id="storage"
                value="{new_phone>/storage}"
                type="Number"
                placeholder="Ex: 128, 256, 512, ..."
                class="sapUiSmallMarginBottom" />

            <Label text="Guarantee (month)" labelFor="guarantee" />
            <Input
                id="guarantee"
                value="{new_phone>/guarantee}"
                type="Number"
                placeholder="Ex: 6, 12, 24, 36, ..."
                class="sapUiSmallMarginBottom" />

            <Label text="Depreciation (%)" labelFor="depreciation" />
            <Input
                id="depreciation"
                value="{new_phone>/depreciation}"
                type="Number"
                placeholder="Ex: New = 0, 99% -> 1, 98% -> 2, ..."
                class="sapUiSmallMarginBottom" />

            <Label text="Fake price (VND)" labelFor="fake_price" />
            <Input
                id="fake_price"
                value="{new_phone>/fake_price}"
                type="Number"
                placeholder="Ex: 19000000"
                class="sapUiSmallMarginBottom" />

            <Label text="Real price (VND)" labelFor="real_price" />
            <Input
                id="real_price"
                value="{new_phone>/real_price}"
                type="Number"
                placeholder="Ex: 23000000"
                class="sapUiSmallMarginBottom" />

            <Label text="Status" labelFor="status" />
            <Input
                id="status"
                value="{new_phone>/status}"
                placeholder="Ex: IN_STOCK, STOCK_OUT"
                class="sapUiSmallMarginBottom" />
        </l:VerticalLayout>


        <Button text="Submit"
            press=".submit">
        </Button>

        <!-- End FORM SUBMIT -->

    </Page>

</mvc:View>