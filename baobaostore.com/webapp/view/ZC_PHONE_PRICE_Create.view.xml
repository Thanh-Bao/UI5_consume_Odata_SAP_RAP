<mvc:View
    controllerName="baobaostore.com.controller.ZC_PHONE_PRICE_Create"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:c="sap.ui.core"
    displayBlock="true"
    height="100%"
    busyIndicatorDelay="0"
    xmlns:course="baobaostore.com.control"
>
    <Page>
        <l:VerticalLayout class="sapUiContentPadding" width="100%">
            <Label text="ID" labelFor="id" />
            <Input
                id="id"
                placeholder="Ex: Iphone-11-Pro-blue-128GB"
                value="{new_phone>/hello/id}"
                class="sapUiSmallMarginBottom" />

            <Label text="Specification ID" labelFor="specification_id" />
            <Input
                id="specification_id"
                type="Number"
                placeholder="Ex: 545"
                value="{new_phone>/hello/key/specification_id}"
                class="sapUiSmallMarginBottom" />

            <Label text="Color" labelFor="color" />
            <Input
                id="color"
                value="{new_phone>/hello/color}"
                placeholder="Ex: BLACK, YELOW, BLUE, ..."
                class="sapUiSmallMarginBottom" />

            <Label text="Storage (GB)" labelFor="storage" />
            <Input
                id="storage"
                value="{new_phone>/hello/storage}"
                type="Number"
                placeholder="Ex: 128, 256, 512, ..."
                class="sapUiSmallMarginBottom" />

            <Label text="Guarantee (month)" labelFor="guarantee" />
            <Input
                id="guarantee"
                value="{new_phone>/hello/guarantee}"
                type="Number"
                placeholder="Ex: 6, 12, 24, 36, ..."
                class="sapUiSmallMarginBottom" />

            <Label text="Depreciation (%)" labelFor="depreciation" />
            <Input
                id="depreciation"
                value="{new_phone>/hello/depreciation}"
                type="Number"
                placeholder="Ex: New = 0, 99% -> 1, 98% -> 2, ..."
                class="sapUiSmallMarginBottom" />

            <Label text="Fake price (VND)" labelFor="fake_price" />
            <Input
                id="fake_price"
                value="{new_phone>/hello/fake_price}"
                type="Number"
                placeholder="Ex: 19000000"
                class="sapUiSmallMarginBottom" />

            <Label text="Real price (VND)" labelFor="real_price" />
            <Input
                id="real_price"
                value="{new_phone>/hello/real_price}"
                type="Number"
                placeholder="Ex: 23000000"
                class="sapUiSmallMarginBottom" />

            <Label text="Status" labelFor="status" />
            <Input
                id="status"
                value="{new_phone>/hello/status}"
                placeholder="Ex: IN_STOCK, STOCK_OUT"
                class="sapUiSmallMarginBottom" />
        </l:VerticalLayout>


        <Button text="Submit"
            press=".submitNewPhone">
        </Button>

        <!-- START CUSTOM CONTROL -->
        <course:ProductRate />
        <!-- END CUSTOM CONTROL -->

    </Page>


</mvc:View>